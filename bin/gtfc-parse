#!/bin/sh

# gtfc parse will set variables USER HOST PORT
# Usage
# in a sh file
# . ~/bin/gtfc-parse user@hostname:port

MYUSER="`whoami`"
PORT="22"
TOSPLIT=$1
if grep '@' ${TOSPLIT} >/dev/null 2>&1 ; then
    if [ "x" != "x${TOSPLIT%@*}" ]; then
        MYUSER="${TOSPLIT%@*}"
    fi
fi
HOSTANDPORT="${TOSPLIT#*@}"
if [ "x" != "x${HOSTANDPORT%:*}" ]; then
    HOST="${HOSTANDPORT%:*}"
fi
if grep ':' ${HOSTANDPORT} >/dev/null 2>&1 ; then
    if [ "x" != "${HOSTANDPORT#*:}" ]; then
        PORT="${HOSTANDPORT#*:}"
    fi
fi
if [ "x" = "x$HOST" ]; then
    exit 1
fi

export MYUSER
export HOST
export PORT
