#!/bin/sh

# Usage:
# gtfc-keygen

if ! grep "gtfc-shell.allowall" ${HOME}/.ssh/authorized_keys >/dev/null 2>&1 ; then
    install -C ${HOME}/.ssh/authorized_keys  ${HOME}/.ssh/gtfc.authorized_keys1
    cat ${HOME}/.ssh/gtfc.authorized_keys1 \
    | awk "{print \"command=\\\"/usr/home/urep/bin/gtfc-shell.allowall\\\" \"$0}" \
    > ${HOME}/.ssh/authorized_keys

fi
