#!/bin/sh

# gtfc-bootstrap folder

. ${HOME}/bin/gtfc-keygen
export FOLDER=$1
. ${HOME}/bin/gtfc-parsefolder

git config user.email "`whoami`@`hostname -s`.gtfc.local" >/dev/null 2>&1
git config user.name "`whoami`" >/dev/null 2>&1

[ -d ${FOLDER} ] || git init --separate-git-dir=${GITPACKDIR} ${FOLDER}
[ -d ${FOLDER} ] || exit 1

cd ${FOLDER}

install -d 755 ${FOLDER}/.gitcluster.ssh

###########################
# add my pubkey to existing cluster but not to repo
for file in authorized_keys2 config known_hosts ; do
    install -C ${HOME}/.ssh/gtfc.${file}  ${FOLDER}/.gitcluster.ssh/${file}
    install -C ${HOME}/.ssh/gtfc.${file}  ${HOME}/.ssh/${file}
done
###########################

git add --all .
git commit -a -m "initial commit - `whoami`@`hostname`" >/dev/null 2>&1
