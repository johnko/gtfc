######################################################################
# Script version is yymmdd-HHMMSS in UTC, date +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=150117-004355

USER="urep"

######################################################################
# ssh-keygen id_rsa
######################################################################
cd ${HOME}

[ -f ${HOME}/.ssh/id_rsa ] \
  || ssh-keygen -N '' -t rsa -b 4096 -f ${HOME}/.ssh/id_rsa
[ -f ${HOME}/.ssh/authorized_keys2 ] \
  || echo "command=\"git-shell -c \\\"\$SSH_ORIGINAL_COMMAND\\\"\" `cat ${HOME}/.ssh/id_rsa.pub`" >${HOME}/.ssh/authorized_keys2

######################################################################
# 1. on HOSTA as ${USER}, run: gtfc init HOSTA folder
######################################################################
HOST=$2
if [ "x" = "x$HOST"]; then
  HOST="`hostname -s`"
fi

FOLDER=$3
if [ "x" = "x$FOLDER"]; then
  FOLDER="gitsync"
fi

if [ "init" = "$1" ]; then

  [ -d ${FOLDER} ] || git init ${FOLDER}
  [ -d ${FOLDER} ] || exit 1

  cd ${FOLDER}
  git config user.email "${USER}@localhost"
  git config user.name "${USER}"
  git remote add ${HOST} ${USER}@${HOST}:~/${FOLDER}
  cp /usr/home/${USER}/.ssh/authorized_keys2 authorized_keys2
  cp .git/config config
  cat >crontab.pullall <<EOF
* * * * * sh /usr/home/${USER}/${FOLDER}/gitpullall.sh
EOF
  cat >gitpullall.sh <<EOF
#!/bin/sh
if [ "\$1" != "-f" ]; then
  pgrep -lf gitpullall.sh >/dev/null 2>&1 && exit 1
fi
cd /usr/home/${USER}/${FOLDER}
setupauthkeys2() {
  diff config .git/config || cp config .git/config
  if ! diff authorized_keys2 /usr/home/${USER}/.ssh/authorized_keys2 ; then
    cat   authorized_keys2 /usr/home/${USER}/.ssh/id_rsa.pub | sort -u > /usr/home/${USER}/.tmpa
    cp /usr/home/${USER}/.tmpa /usr/home/${USER}/.ssh/authorized_keys2
  fi
  if ! diff known_hosts /usr/home/${USER}/.ssh/known_hosts ; then
    cat   known_hosts /usr/home/${USER}/.ssh/known_hosts | sort -u > /usr/home/${USER}/.tmpk
    cp /usr/home/${USER}/.tmpk /usr/home/${USER}/.ssh/known_hosts
  fi
}
setupauthkeys2
for i in \$(/usr/local/bin/git remote); do
  if echo \$i | grep push >/dev/null 2>&1 ; then
    /usr/local/bin/git push -q \$i master
  else
    /usr/local/bin/git pull -q --ff-only \$i master
  fi
done
setupauthkeys2
if [ -f crontab.pullall.\$(hostname) ]; then
  crontab crontab.pullall.\$(hostname)
else
  crontab crontab.pullall
fi
EOF
  cat >crontab.pullbare <<EOF
* * * * * sh /usr/home/${USER}/${FOLDER}/gitpullbare.sh
EOF
  cat >gitpullbare.sh <<EOF
#!/bin/sh
if [ "\$1" != "-f" ]; then
  pgrep -lf gitpullbare.sh >/dev/null 2>&1 && exit 1
fi
cd /usr/home/${USER}/${FOLDER}
setupauthkeys2() {
  if ! diff authorized_keys2 /usr/home/${USER}/.ssh/authorized_keys2 ; then
    cat   authorized_keys2 /usr/home/${USER}/.ssh/id_rsa.pub | sort -u > /usr/home/${USER}/.tmpa
    cp /usr/home/${USER}/.tmpa /usr/home/${USER}/.ssh/authorized_keys2
  fi
  if ! diff known_hosts /usr/home/${USER}/.ssh/known_hosts ; then
    cat   known_hosts /usr/home/${USER}/.ssh/known_hosts | sort -u > /usr/home/${USER}/.tmpk
    cp /usr/home/${USER}/.tmpk /usr/home/${USER}/.ssh/known_hosts
  fi
}
setupauthkeys2
/usr/local/bin/git pull -q --ff-only
setupauthkeys2
if [ -f crontab.pullbare.\$(hostname) ]; then
  crontab crontab.pullbare.\$(hostname)
else
  crontab crontab.pullbare
fi
EOF
  sh gitpullall.sh
  cp /usr/home/${USER}/.ssh/known_hosts known_hosts
  git add .
  git commit -m "added ${HOST} to config, `hostname` to authorized_keys2, known_hosts"
  # end of init

######################################################################
# This can be skipped if you ssh -A ${USER}@hostB gtfc clone HOSTA
# 2. on HOSTA as ${USER}, run: gtfc add hostB
######################################################################
elif [ "add" = "$1" ]; then # run this on HOSTA before running on clones
  [ -d ${FOLDER} ] || exit 1
  cd ${FOLDER}
  git remote add ${HOST} ${USER}@${HOST}:~/${FOLDER}
  while diff .git/config config ; do
    sleep 1
  done
  cp .git/config config
  git add .
  git commit -m "added ${HOST} to config"
  # end of add

######################################################################
# 3. on hostB as ${USER}, run: gtfc clone HOSTA
######################################################################
elif [ "clone" = "$1" ]; then # run on clones
  ssh ${USER}@${HOST} "gtfc add `hostname`"
  [ -d ${FOLDER} ] || git clone ${USER}@${HOST}:~/${FOLDER}
  [ -d ${FOLDER} ] || exit 1
  cd ${FOLDER}
  sh gitpullall.sh
  cp /usr/home/${USER}/.ssh/authorized_keys2 authorized_keys2
  cp /usr/home/${USER}/.ssh/known_hosts known_hosts
  git add .
  git commit -m "added `hostname` to authorized_keys2, known_hosts"
######################################################################
# 4. on HOSTA as ${USER}, run: sh ${FOLDER}/gitpullall.sh
######################################################################
  cat <<EOF
Can't run this for you because you may have ssh forwarding on
.............................................
  On ${USER}@${HOST}, run: sh ${FOLDER}/gitpullall.sh
.............................................
EOF

######################################################################
# 5. on HOSTA as ${USER}, run: gtfc push hostB
######################################################################
elif [ "push" = "$1" ]; then
  [ -d ${FOLDER} ] || exit 1
  cd ${FOLDER}
  git remote add push${HOST} ${USER}@${HOST}:~/${FOLDER}push
  ssh ${USER}@${HOST} 'git init --bare ${FOLDER}push'
  while diff .git/config config ; do
    sleep 1
  done
  cp .git/config config
  cp /usr/home/${USER}/.ssh/known_hosts known_hosts
  git add .
  git commit -m "added push${HOST} to config, ${HOST} to known_hosts"
  git push push${HOST} master
  ssh ${USER}@${HOST} 'git clone ${FOLDER}push ${FOLDER}'
  ssh ${USER}@${HOST} 'sh ${FOLDER}/gitpullbare.sh'
  # end of push

fi
